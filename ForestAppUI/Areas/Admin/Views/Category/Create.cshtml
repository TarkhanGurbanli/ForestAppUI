@model Category

@{
    if (ViewBag.Error != null)
    {
        <h4 class="alert-danger">@ViewBag.Error</h4>
    }
}

<a href="/admin/category" class="btn btn-dark m-2"><i class="fa-solid fa-caret-left"></i> Back</a>


<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="@Model.CategoryName" class="alert-primary p-2">Category Name</label>
        <input type="text" asp-for="@Model.CategoryName" class="form-control" />
        <span asp-validation-for="@Model.CategoryName" class="alert-danger"></span>
    </div>
    <input type="submit" value="Create" class="btn btn-success w-25 m-2" />
</form>