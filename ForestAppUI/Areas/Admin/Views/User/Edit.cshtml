@model User
@inject Microsoft.AspNetCore.Identity.UserManager<User> userManager

<a href="/admin/user" class="btn btn-dark m-2"><i class="fa-solid fa-caret-left"></i> Back</a>


<dl>
    <dt>Firstname & Lastname</dt>
    <dd>@Model.FirstName  @Model.LastName</dd>
    <dt>Email</dt>
    <dd>@Model.Email]</dd>
</dl>

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Role</th>


        </tr>
    </thead>

    <tbody>
        @foreach (var item in await userManager.GetRolesAsync(Model))
        {
            <tr>
                <td>@item</td>
                <td>
                    <a asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-userid="@Model.Id" asp-route-role="@item" class="btn btn-danger">Delete Role</a>
                </td>
            </tr>
        }
    </tbody>
</table>
